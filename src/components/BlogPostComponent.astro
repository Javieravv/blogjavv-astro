---
const  { url, title } = Astro.props;

---

<style>
    .cardpost {
        display: flex;
        flex-grow: 1;
        width: min(300px, 100%);
        height: 100px;
        outline: 2px solid rgba(0, 0, 255, 0.712);
        box-shadow: 5px 5px 8px rgba(0, 0, 0, 0.5);
        border-radius: 5px;
        align-items: center;
        /* justify-content: center; */
        place-content: center;
        

        a {
            color: black;
        }
    }
</style>

<div class="cardpost">
    <a href={url}>{title}</a>
</div>